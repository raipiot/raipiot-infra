import type HttpRequest from '@raipiot-2f/axios'

import type { #{pcNames}PageDto, #{pcNames}SubmitDto } from './dto'
import type { #{pcNames}Vo, #{pcName}Vo } from './vo'

export * from './dto'
export * from './vo'


export class #{pcNames}API extends BaseAPI {
  #API_PREFIX: string

  constructor(httpRequest: HttpRequest) {
    super(httpRequest)
    this.#API_PREFIX = `${this.BASE_API_PREFIX}#{apiPrefix}/#{ccName}`
  }

  /**
   * 获取
   */
  async detail(id: string, signal?: AbortSignal) {
    return this.httpRequest.get<#{pcName}Vo>(
      `${this.#API_PREFIX}/detail`,
      { id },
      {
        signal
      }
    )
  }

  /**
   * 列表
   */
  async list(params?: #{pcNames}PageDto, signal?: AbortSignal) {
    return this.httpRequest.get<#{pcNames}Vo>(`${this.#API_PREFIX}/list`, params, {
      signal
    })
  }

  /**
   * 提交
   */
  async submit(data: #{pcNames}SubmitDto) {
    return this.httpRequest.post(`${this.#API_PREFIX}/submit`, data)
  }

  /**
   * 删除
   */
  async remove(ids: string) {
    return this.httpRequest.post(
      `${this.#API_PREFIX}/remove`,
      {},
      {
        params: {
          ids
        }
      }
    )
  }
}
