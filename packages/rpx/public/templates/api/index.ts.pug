import type HttpRequest from '@raipiot-2f/axios'

import { BaseAPI } from ''
import type { #{pcName}PageDto, #{pcName}SubmitDto } from './dto'
import type { #{pcName}sVo } from './vo'

export * from './dto'
export * from './vo'


export class #{apiPrefix}#{pcName}API extends BaseAPI {
  #API_PREFIX: string

  constructor(httpRequest: HttpRequest) {
    super(httpRequest)
    // TODO: 定义当前目录的前缀
    this.#API_PREFIX = `${this.BASE_API_PREFIX}/#{apiPrefix}/#{ccName}`
  }

  /**
   * 获取
   */
  detail({ signal }: { signal?: AbortSignal }) {
    // TODO: 添加泛型响应类型
    return this.httpRequest.get(
      `${this.#API_PREFIX}/detail`,
      {},
      {
        signal
      }
    )
  }

  /**
   * 列表
   */
  list(params: #{pcName}PageDto, signal?: AbortSignal) {
    return this.httpRequest.get(`${this.#API_PREFIX}/list`, params, {
      signal
    })
  }

  /**
   * 提交
   */
  async submit(data: #{pcName}SubmitDto) {
    return this.httpRequest.post(`${this.#API_PREFIX}/submit`, data)
  }

  /**
   * 删除
   */
  remove(ids: string) {
    return this.httpRequest.post(
      `${this.#API_PREFIX}/remove`,
      {},
      {
        params: {
          ids
        }
      }
    )
  }
}
