{
  "name": "raipiot-infra",
  "description": "raipiot front-end infrastructure.",
  "author": "Bruce Song <recall4056@gmail.com> (https://github.com/recallwei/)",
  "scripts": {
    "dev:react": "FORCE_COLOR=1 turbo dev --filter=react-playground",
    "dev:next": "FORCE_COLOR=1 turbo dev --filter=next-playground",
    "dev:antd": "FORCE_COLOR=1 turbo dev --filter=@raipiot-infra/antd",
    "dev:auto-import": "FORCE_COLOR=1 turbo dev --filter=@raipiot-infra/auto-import",
    "dev:packages": "FORCE_COLOR=1 turbo dev --scope=@raipiot-infra/utils --scope=@raipiot-infra/config",
    "dev:utils": "FORCE_COLOR=1 turbo dev --filter=@raipiot-infra/utils",
    "dev:config": "FORCE_COLOR=1 turbo dev --filter=@raipiot-infra/config",
    "build:apps": "FORCE_COLOR=1 turbo build --filter=./apps/*",
    "build:react": "FORCE_COLOR=1 turbo build --filter=react-playground",
    "build:next": "FORCE_COLOR=1 turbo build --filter=next-playground",
    "build:packages": "FORCE_COLOR=1 turbo build --filter=./packages/*",
    "build:antd": "FORCE_COLOR=1 turbo build --filter=@raipiot-infra/antd",
    "build:utils": "FORCE_COLOR=1 turbo build --filter=@raipiot-infra/utils",
    "build:config": "FORCE_COLOR=1 turbo build --filter=@raipiot-infra/config",
    "preview:react": "FORCE_COLOR=1 turbo preview --filter=react-playground",
    "preview:next": "FORCE_COLOR=1 turbo preview --filter=next-playground",
    "storybook:antd": "FORCE_COLOR=1 turbo storybook --filter=@raipiot-infra/antd",
    "clean": "FORCE_COLOR=1 turbo clean && rimraf node_modules",
    "cspell:sort:dict": "FORCE_COLOR=1 turbo cspell:sort:dict --filter=@raipiot-infra/cspell",
    "cspell:check": "FORCE_COLOR=1 turbo cspell:check",
    "type:check": "FORCE_COLOR=1 turbo type:check",
    "prettier:check": "FORCE_COLOR=1 turbo prettier:check",
    "prettier:fix": "FORCE_COLOR=1 turbo prettier:fix",
    "eslint:check": "FORCE_COLOR=1 turbo eslint:check",
    "eslint:fix": "FORCE_COLOR=1 turbo eslint:fix",
    "cz": "git-cz",
    "release:generate": "pnpm changeset",
    "release:version": "pnpm changeset version",
    "publish:packages": "pnpm build:packages && pnpm changeset publish",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@raipiot-infra/commitlint-config": "workspace:*",
    "@raipiot-infra/cspell": "workspace:*",
    "@raipiot-infra/eslint-config": "workspace:^",
    "@raipiot-infra/eslint-config-ts": "workspace:*",
    "@raipiot-infra/prettier": "workspace:*",
    "@raipiot-infra/rpx": "workspace:*",
    "@raipiot-infra/tsconfig": "workspace:*",
    "commitizen": "^4.3.0",
    "cspell": "^8.3.2",
    "cz-git": "^1.8.0",
    "eslint": "^8.56.0",
    "husky": "^9.0.7",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "turbo": "^1.11.3",
    "typescript": "^5.3.3"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "packageManager": "pnpm@8.0.0",
  "engines": {
    "node": ">=20"
  },
  "private": true,
  "license": "MIT"
}
