{
  "name": "raipiot-infra",
  "description": "raipiot front-end infrastructure.",
  "author": "Bruce Song <recall4056@gmail.com> (https://github.com/recallwei/)",
  "scripts": {
    "dev:react": "FORCE_COLOR=1 turbo dev --filter=@raipiot-infra/react-ts",
    "dev:next": "FORCE_COLOR=1 turbo dev --filter=@raipiot-infra/next",
    "dev:packages": "turbo dev --scope=@raipiot-infra/utils --scope=@raipiot-infra/config",
    "dev:utils": "turbo dev --filter=@raipiot-infra/utils",
    "dev:config": "turbo dev --filter=@raipiot-infra/config",
    "build:apps": "turbo build --scope=@raipiot-infra/next --scope=@raipiot-infra/react-ts",
    "build:react": "turbo build --filter=@raipiot-infra/react-ts",
    "build:next": "turbo build --filter=@raipiot-infra/next",
    "build:packages": "turbo build --scope=@raipiot-infra/utils --scope=@raipiot-infra/config",
    "build:utils": "turbo build --filter=@raipiot-infra/utils",
    "build:config": "turbo build --filter=@raipiot-infra/config",
    "preview:react": "turbo preview --filter=@raipiot-infra/react-ts",
    "preview:next": "turbo preview --filter=@raipiot-infra/next",
    "clean": "turbo clean && rimraf node_modules",
    "cspell:sort:dict": "turbo cspell:sort:dict --filter=@raipiot-infra/cspell",
    "cspell:check": "turbo cspell:check",
    "type:check": "turbo type:check",
    "prettier:check": "turbo prettier:check",
    "prettier:fix": "turbo prettier:fix",
    "eslint:check": "turbo eslint:check",
    "eslint:fix": "turbo eslint:fix",
    "cz": "git-cz",
    "changesets": "pnpm changeset",
    "publish:packages": "turbo build:apps && pnpm changeset version && pnpm changeset publish",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^18.5.0",
    "@commitlint/config-conventional": "^18.5.0",
    "@raipiot-infra/cspell": "workspace:*",
    "@raipiot-infra/eslint-config": "workspace:^",
    "@raipiot-infra/eslint-config-ts": "workspace:*",
    "@raipiot-infra/prettier": "workspace:*",
    "@raipiot-infra/tsconfig": "workspace:*",
    "commitizen": "^4.3.0",
    "cspell": "^8.3.2",
    "cz-git": "^1.8.0",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "turbo": "^1.11.3",
    "typescript": "^5.3.3"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "packageManager": "pnpm@8.0.0",
  "engines": {
    "node": ">=20"
  },
  "private": true,
  "license": "MIT"
}
